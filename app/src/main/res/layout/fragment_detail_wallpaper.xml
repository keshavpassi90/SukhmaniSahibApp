<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/screen_bg"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:background="@drawable/splash_gradient_bg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/backRL"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/back"
                android:layout_marginLeft="@dimen/_15sdp"

                app:tint="@color/white" />
        </RelativeLayout>


        <TextView
            android:id="@+id/headingTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/backRL"
            app:layout_constraintTop_toTopOf="@+id/backRL"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/backRL"
            />




    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_marginTop="@dimen/_10sdp"
android:layout_marginBottom="@dimen/_10sdp"
        android:id="@+id/wallpaperIMG"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
app:layout_constraintBottom_toTopOf="@+id/setWallPaperCV"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="0dp"/>

    <androidx.cardview.widget.CardView
        android:layout_marginBottom="@dimen/_10sdp"
        android:id="@+id/setWallPaperCV"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardBackgroundColor="@color/theme_selected_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_12sdp"
       >
        <!-- Card Content -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_15sdp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/wallpaperBTN"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <ProgressBar
        android:visibility="gone"
        android:indeterminateTint="@color/colorLoader"
        android:indeterminateTintMode="src_in"
        android:id="@+id/progressBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
