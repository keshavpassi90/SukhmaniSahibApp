<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar_id"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_id">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:padding="10dp"
                android:textSize="17sp"
                android:textColor="?attr/gray"
                android:background="?attr/light"
                android:text="@string/display_settings"
                tools:text="@string/display_settings"
                android:duplicateParentState="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom"
                android:padding="15dp"
                android:orientation="horizontal"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_font"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:textSize="17sp"
                    android:textColor="?attr/gray"
                    android:text="@string/select_font"
                    tools:text="@string/select_font"
                    android:duplicateParentState="true"/>

                <TextView
                    android:id="@+id/changeFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_chevron_right"
                    android:textSize="17sp"
                    android:text="@string/medium" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom"
                android:padding="15dp"
                android:orientation="horizontal"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_font"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:textSize="17sp"
                    android:textColor="?attr/gray"
                    android:text="@string/font_style"
                    tools:text="@string/font_style"
                    android:duplicateParentState="true"/>

                <TextView
                    android:id="@+id/font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_chevron_right"
                    android:textSize="17sp"
                    android:text="@string/webakharslim" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom"
                android:padding="15dp"
                android:orientation="horizontal"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_layout"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:textSize="17sp"
                    android:textColor="?attr/gray"
                    android:text="@string/select_layout"
                    tools:text="@string/select_layout"
                    android:duplicateParentState="true"/>

                <TextView
                    android:id="@+id/homeStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_chevron_right"
                    android:textSize="17sp"
                    android:text="@string/simple" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/list_item8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom"
                android:padding="15dp"
                android:orientation="horizontal"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/logoImage"
                    app:srcCompat="@drawable/ic_translate"
                    android:layout_marginEnd="10dp" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start|center_vertical"
                        android:textSize="17sp"
                        android:textColor="?attr/gray"
                        android:text="@string/translations"
                        tools:text="@string/translations"
                        android:duplicateParentState="true"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start|center_vertical"
                        android:textSize="12sp"
                        android:textColor="?attr/gray"
                        android:text="@string/translate_info"
                        tools:text="@string/translate_info"
                        android:duplicateParentState="true"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/enabletranslations"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/logoImage"
                    app:srcCompat="@drawable/ic_arrow_down" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/translationPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="15dp"
                android:visibility="gone">
                <LinearLayout
                    android:id="@+id/list_item10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_bottom"
                    android:padding="15dp"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/punjabiTranslations"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center_vertical"
                        android:textSize="17sp"
                        android:textColor="?attr/gray"
                        android:text="@string/punjabiTranslation"
                        tools:text="@string/punjabiTranslation"
                        android:duplicateParentState="true"/>

                    <Switch
                        android:id="@+id/punjabiEnableCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:orientation="horizontal"
                    android:background="@drawable/border_bottom"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center_vertical"
                        android:textSize="17sp"
                        android:textColor="?attr/gray"
                        android:text="@string/teeka_padarth"
                        tools:text="@string/teeka_padarth"
                        android:duplicateParentState="true"/>

                    <Switch
                        android:id="@+id/teekapadEnableCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_bottom"
                    android:padding="15dp"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center_vertical"
                        android:textSize="17sp"
                        android:textColor="?attr/gray"
                        android:text="@string/teeka_arth"
                        tools:text="@string/teeka_arth"
                        android:duplicateParentState="true"/>

                    <Switch
                        android:id="@+id/teekaEnableCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/list_item9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_bottom"
                    android:padding="15dp"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/englishTranslations"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center_vertical"
                        android:textSize="17sp"
                        android:textColor="?attr/gray"
                        android:text="@string/englishTranslation"
                        tools:text="@string/englishTranslation"
                        android:duplicateParentState="true"/>

                    <Switch
                        android:id="@+id/englishEnableCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:orientation="horizontal"
                android:background="@drawable/border_bottom"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    app:srcCompat="@drawable/ic_darkmode" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:duplicateParentState="true"
                    android:gravity="start|center_vertical"
                    android:text="@string/darkmode"
                    android:textColor="?attr/gray"
                    android:textSize="17sp"
                    tools:text="@string/darkmode" />

                <Switch
                    android:id="@+id/darkmodeon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:padding="10dp"
                android:textSize="17sp"
                android:textColor="?attr/gray"
                android:background="?attr/light"
                android:text="@string/other_settings"
                tools:text="@string/other_settings"
                android:duplicateParentState="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/border_bottom">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/logoImage"
                    app:srcCompat="@drawable/ic_share"
                    android:layout_gravity="center"
                    android:padding="10dp"/>
                <LinearLayout
                    android:id="@+id/list_item2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start|center_vertical"
                        android:textSize="17sp"
                        android:textColor="?attr/gray"
                        android:text="@string/shareApp"
                        tools:text="@string/shareApp"
                        android:duplicateParentState="true"/>

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start|center_vertical"
                        android:layout_marginTop="7dp"
                        android:textSize="15sp"
                        android:textColor="?attr/gray"
                        android:text="@string/shareAppText"
                        tools:text="@string/shareAppText"
                        android:duplicateParentState="true"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/border_bottom">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/logoImage"
                    app:srcCompat="@drawable/ic_star"
                    android:layout_gravity="center"
                    android:padding="10dp"/>
                <LinearLayout
                    android:id="@+id/list_item3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="15dp"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center_vertical"
                        android:textSize="17sp"
                        android:textColor="?attr/gray"
                        android:text="@string/rateApp"
                        tools:text="@string/rateApp"
                        android:duplicateParentState="true"/>

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center_vertical"
                        android:layout_marginTop="7dp"
                        android:textColor="?attr/gray"
                        android:textSize="15sp"
                        android:text="@string/rateAppText"
                        tools:text="@string/rateAppText"
                        android:duplicateParentState="true"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/list_item7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom"
                android:padding="15dp"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:textSize="17sp"
                    android:textColor="?attr/gray"
                    android:text="@string/feedback"
                    tools:text="@string/feedback"
                    android:duplicateParentState="true"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/list_item6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom"
                android:padding="15dp"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:textSize="17sp"
                    android:textColor="?attr/gray"
                    android:text="@string/privacy"
                    tools:text="@string/privacy"
                    android:duplicateParentState="true"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/list_item5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom"
                android:padding="15dp"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:textSize="17sp"
                    android:textColor="?attr/gray"
                    android:text="@string/checkUpdate"
                    tools:text="@string/checkUpdate"
                    android:duplicateParentState="true"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/list_item4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom"
                android:padding="15dp"
                android:orientation="vertical"
                android:clickable="false"
                android:focusable="true">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:textSize="17sp"
                    android:textColor="?attr/gray"
                    android:text="@string/version"
                    tools:text="@string/version"
                    android:duplicateParentState="true"/>

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:layout_marginTop="7dp"
                    android:textColor="?attr/gray"
                    android:textSize="15sp"
                    android:text="@string/versionCode"
                    tools:text="@string/versionCode"
                    android:duplicateParentState="true"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>