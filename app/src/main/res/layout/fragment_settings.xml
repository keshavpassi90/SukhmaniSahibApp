<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/screen_bg"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:background="@drawable/splash_gradient_bg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/backRL"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/back"
                android:layout_marginLeft="@dimen/_15sdp"

                app:tint="@color/white" />
        </RelativeLayout>


        <TextView
            android:id="@+id/headingTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/backRL"
            app:layout_constraintTop_toTopOf="@+id/backRL"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/backRL"
            />




    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollNV"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:id="@+id/list_item2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:background="@drawable/border_bottom"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center_vertical"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        android:duplicateParentState="true"/>

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"

                        android:gravity="start|center_vertical"
                        android:layout_marginTop="7dp"
                        android:textSize="15sp"
                        android:duplicateParentState="true"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/list_item3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_bottom"
                    android:padding="15dp"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center_vertical"
                        android:textSize="17sp"
                        android:textColor="@color/black"

                        android:duplicateParentState="true"/>

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center_vertical"
                        android:layout_marginTop="7dp"
                        android:textSize="15sp"
                        android:textColor="@color/black"

                        android:duplicateParentState="true"/>

                </LinearLayout>
                <!-- Language Change -->
                <LinearLayout
                    android:id="@+id/list_item_language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_bottom"
                    android:padding="15dp"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/languageTV"
                        android:text="Language"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center_vertical"
                        android:textSize="17sp"
                        android:textColor="@color/black"

                        android:duplicateParentState="true"/>

                    <TextView
                        android:id="@+id/tvSelectedLanguage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center_vertical"
                        android:layout_marginTop="7dp"
                        android:textSize="15sp"
                        android:textColor="@color/black"

                        android:duplicateParentState="true"                       android:text="English"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/list_item7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_bottom"
                    android:padding="15dp"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="start|center_vertical"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        android:duplicateParentState="true"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/list_item6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_bottom"
                    android:padding="15dp"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="start|center_vertical"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        android:duplicateParentState="true"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/list_item5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_bottom"
                    android:padding="15dp"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="start|center_vertical"
                        android:textSize="17sp"
                        android:textColor="@color/black"

                        android:duplicateParentState="true"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/list_item4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_bottom"
                    android:padding="15dp"
                    android:orientation="vertical"
                    android:clickable="false"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center_vertical"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        android:duplicateParentState="true"/>

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center_vertical"
                        android:layout_marginTop="7dp"
                        android:textSize="15sp"
                        android:textColor="@color/black"

                        android:text="1.0.0"
                        android:duplicateParentState="true"/>

                </LinearLayout>
            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:visibility="gone"
        android:indeterminateTint="@color/colorLoader"
        android:indeterminateTintMode="src_in"
        android:id="@+id/progressBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
