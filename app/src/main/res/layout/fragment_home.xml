<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/screen_bg"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:background="@drawable/splash_gradient_bg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content">


        <ImageView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imageView1"
            android:src="@drawable/splash_logo"
            android:padding="5dp"
            android:layout_height="@dimen/_55sdp"
            android:layout_width="@dimen/_55sdp"/>

        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/headingTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/settings"            android:shadowRadius="30"
            app:layout_constraintLeft_toRightOf="@+id/imageView1"
            />

        <TextView
            android:id="@+id/subheadingTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/theme_selected_nav"
            android:layout_marginRight="20dp"
            app:layout_constraintRight_toLeftOf="@+id/settings"            android:shadowRadius="30"
            app:layout_constraintBottom_toBottomOf="@+id/imageView1"
app:layout_constraintTop_toBottomOf="@+id/headingTV"
            app:layout_constraintLeft_toRightOf="@+id/imageView1"
            />


        <RelativeLayout
            android:id="@+id/settings"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="80dp"
            android:layout_height="80dp">
            <ImageView
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_settings"

                android:layout_height="@dimen/_20sdp"
                android:layout_width="@dimen/_20sdp"
                app:tint="@color/white" />
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/headerCL"
                android:background="@drawable/splash_gradient_bg"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_220sdp">

                <ImageView
                    android:id="@+id/flagIMG"
                    android:src="@drawable/ic_home_logo"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="@dimen/_180sdp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/waheguruJiTV"
                    android:textSize="@dimen/_17sdp"
                    android:textColor="@color/white"
android:lineSpacingExtra="@dimen/_5sdp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
android:gravity="center"
                    android:singleLine="false"
                    android:layout_marginRight="@dimen/_25sdp"
                    android:layout_marginLeft="@dimen/_80sdp"
                    android:layout_marginTop="@dimen/_40sdp"
app:layout_constraintRight_toRightOf="parent"
                    android:elevation="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/dailyHukumnamaCV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toBottomOf="@id/headerCL"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                android:translationY="-65dp"

                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_10sdp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white">

                <!-- Card Content -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_15sdp"
                    android:orientation="vertical">

                    <TextView
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/headingHukumanamTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_16sdp"
                        android:textStyle="bold"
                        android:textColor="@color/colorLoader"/>

                    <TextView
                        android:id="@+id/dateTV"
                        app:layout_constraintBottom_toBottomOf="@+id/headingHukumanamTV"
                        app:layout_constraintTop_toTopOf="@+id/headingHukumanamTV"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/colorLoader"/>
                    <TextView
                        android:id="@+id/noteTV"
                        android:layout_marginTop="@dimen/_8sdp"
                        app:layout_constraintTop_toBottomOf="@+id/headingHukumanamTV"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/dim_gray"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                app:layout_constraintTop_toBottomOf="@+id/dailyHukumnamaCV"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/nitenamesTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_18sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:textStyle="bold"
                android:translationY="-70dp"
                android:textColor="@color/colorLoader" />

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/nitenamesRV"
    android:translationY="-60dp"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    app:layout_constraintTop_toBottomOf="@+id/nitenamesTV"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
<androidx.cardview.widget.CardView
    android:id="@+id/seeAllCV"
    app:cardBackgroundColor="@color/theme_selected_nav"
    app:layout_constraintTop_toBottomOf="@+id/nitenamesRV"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_10sdp"
android:layout_marginRight="@dimen/_12sdp"
    android:layout_marginLeft="@dimen/_12sdp"
    android:translationY="-50dp">
    <!-- Card Content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_15sdp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/nitenamsBTN"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
<ProgressBar
    android:visibility="gone"
    android:indeterminateTint="@color/theme_selected_nav"
    android:indeterminateTintMode="src_in"
    android:id="@+id/progressBar"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_width="@dimen/_45sdp"
    android:layout_height="@dimen/_45sdp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
